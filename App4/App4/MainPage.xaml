<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="App 4!" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Contador de clicks con arquitectura MVVM!" FontSize="16" Padding="30,0,30,0"/>
        <Label Text="{Binding CountConverted}" Padding="5,10,30,0"/>

        <Button Text="Haz Click" Command="{Binding ButtonClickCommand}"/>
        <Button Text="Reiniciar" Command="{Binding ResetButtonCommand}"/>

    </StackLayout>

</ContentPage>
